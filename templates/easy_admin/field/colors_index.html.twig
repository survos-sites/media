{% set c = field.value ?? {} %}
{% if c and (c.palette ?? []) is not empty %}
  <div style="display:flex;gap:4px">
    {% for rgb in (c.palette ?? [])|slice(0,6) %}
      {% set hex = '#' ~ '%06X'|format(rgb) %}
      <span title="{{ hex }}"
            style="width:14px;height:14px;border-radius:3px;border:1px solid #ccc;display:inline-block;background: {{ hex }}"></span>
    {% endfor %}
  </div>
{% else %}
  <span style="opacity:.5">â€”</span>
{% endif %}
